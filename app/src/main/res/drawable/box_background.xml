<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#aaa" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Shadow effect using padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Stroke for border effect -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" />

    <!-- Optional inner shadow -->
    <gradient
        android:startColor="#aaa"
        android:endColor="#F5F5F5"
        android:angle="90" />
</shape>
