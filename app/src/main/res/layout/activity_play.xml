<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.mindsetgameproject.viewmodel.PlayViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/background_image">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_gravity="start" />

        <LinearLayout
            android:id="@+id/attempt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/guess1_attempt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess2_attempt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess3_attempt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess4_attempt1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/feedback_attempt1_fully_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fully Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt1_partially_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partially Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt1_incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incorrect: 0"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attempt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/guess1_attempt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess2_attempt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess3_attempt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess4_attempt2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/feedback_attempt2_fully_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fully Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt2_partially_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partially Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt2_incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incorrect: 0"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attempt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/guess1_attempt3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess2_attempt3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess3_attempt3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess4_attempt3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/feedback_attempt3_fully_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fully Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt3_partially_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partially Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt3_incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incorrect: 0"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attempt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/guess1_attempt4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess2_attempt4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess3_attempt4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/guess4_attempt4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/box_background"
                android:gravity="center"
                android:maxLength="1"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/feedback_attempt4_fully_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fully Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt4_partially_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partially Correct: 0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/feedback_attempt4_incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Incorrect: 0"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/checkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECK"
            android:layout_gravity="center"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@color/btn_color"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/remainingTriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Tries: 4"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</layout>
